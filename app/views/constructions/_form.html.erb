<div class="form construction-form">
  <div class="row header">
    <h1>Construction &nbsp;</h1>
    <p>Thank you for contributing!</p>
  </div>
  <div class="errors"></div>
  <div class="row body">
    <%= form_for @construction, remote: true do |f| %>
      <div class="large-4 columns">
        <%= f.label :line %>
        <%= f.collection_select :line_id, Line.all, :id, :name, prompt: "Select Line" %>
      </div>

      <div class="large-4 medium-6 columns">
        <%= f.label :start_station %>
        <%= f.collection_select :start_station_id, Line.first.stations, :id, :name, prompt: "Select Line first" %>
      </div>

      <div class="large-4 medium-6 columns">
        <%= f.label :end_station %>
        <%= f.collection_select :end_station_id, Line.first.stations, :id, :name, prompt: "Select Line first" %>
      </div>

      <div class="medium-6 columns">
        <%= f.label :start_date %>
        <%= f.date_field :start_date %>
      </div>

      <div class="medium-6 columns">
        <%= f.label :end_date %>
        <%= f.date_field :end_date, min: Date.today %>
      </div>

      <div class="medium-6 columns">
        <%= f.label :start_time %>
        <%= f.time_field :start_time %>
      </div>

      <div class="medium-6 columns">
        <%= f.label :end_time %>
        <%= f.time_field :end_time %>
      </div>

      <div class="medium-7 columns">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>

      <div class="medium-5 columns">
        <%= f.submit class: "button info" %>
      </div>

      <%= link_to "Back", "#", class: "right", id: "close-modal" %>
    <% end %>
  </div>
</div>
